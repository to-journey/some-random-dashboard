{
  "compilerOptions": {
    "baseUrl": ".",               // This sets the base directory for absolute paths
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/lib/*": ["src/lib/*"],
      "@/app/*": ["src/app/*"],
      "@/context/*": ["src/context/*"],
    },
    "allowImportingTsExtensions": true,
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/components/dashboard/users/UserDataGrid.jsx", "src/app/api/auth/[...nextauth]/route.ts"],
  "exclude": ["node_modules"]
}
